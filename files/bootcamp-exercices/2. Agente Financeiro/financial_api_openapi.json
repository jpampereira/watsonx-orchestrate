{
    "openapi": "3.0.3",
    "info": {
      "title": "Financial AI API with Yahoo Finance",
      "version": "2.0.0",
      "description": "Financial AI API with real-time Yahoo Finance data integration. Removed news and market overview endpoints for focused financial analysis."
    },
    "servers": [
        {
            "url": "https://financial-analyst.21pfvqjn6rrj.us-south.codeengine.appdomain.cloud/"
          }
    ],
    "paths": {
      "/financial/stock-data": {
        "post": {
          "summary": "Obter dados de preços de ações",
          "description": "Obtenha dados históricos de preços de ações do Yahoo Finance, incluindo dados OHLCV para períodos e intervalos de tempo específicos.",
          "operationId": "get_stock_price_data_financial_stock_data_post",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ticker": {
                      "type": "string",
                      "title": "Sigla",
                      "description": "Código de negociação da ação (ex: AAPL, MSFT, TSLA)"
                    },
                    "period": {
                      "type": "string",
                      "title": "Período",
                      "description": "Período de tempo para recuperação de dados",
                      "default": "1mo",
                      "enum": ["1d", "5d", "1mo", "3mo", "6mo", "1y", "2y", "5y", "10y", "ytd", "max"]
                    },
                    "interval": {
                      "type": "string",
                      "title": "Interval",
                      "description": "Granularidade do intervalo de dados",
                      "default": "1d",
                      "enum": ["1m", "2m", "5m", "15m", "30m", "60m", "90m", "1h", "1d", "5d", "1wk", "1mo", "3mo"]
                    }
                  },
                  "required": ["ticker"]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Resposta bem sucedida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {"type": "boolean"},
                      "data": {
                        "type": "object",
                        "properties": {
                          "ticker": {"type": "string"},
                          "period": {"type": "string"},
                          "interval": {"type": "string"},
                          "total_records": {"type": "integer"},
                          "data": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "date": {"type": "string", "format": "date"},
                                "open": {"type": "number"},
                                "high": {"type": "number"},
                                "low": {"type": "number"},
                                "close": {"type": "number"},
                                "volume": {"type": "integer"}
                              }
                            }
                          }
                        }
                      },
                      "error": {"type": "string"}
                    },
                    "required": ["success"]
                  }
                }
              }
            },
            "422": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "detail": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "loc": {"type": "array", "items": {"type": "string"}},
                            "msg": {"type": "string"},
                            "type": {"type": "string"}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
