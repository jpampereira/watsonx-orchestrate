      "/financial/statements": {
        "post": {
          "summary": "Obter demonstrações financeiras",
          "description": "Obter demonstrações financeiras, incluindo demonstração de resultados, balanço patrimonial ou demonstração de fluxo de caixa com dados anuais e trimestrais.",
          "operationId": "get_financial_statements_data_financial_statements_post",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ticker": {
                      "type": "string",
                      "title": "Sigla",
                      "description": "Código de negociação da ação"
                    },
                    "statement_type": {
                      "type": "string",
                      "title": "Tipo de declaração",
                      "description": "Tipo de demonstração financeira a ser recuperada",
                      "default": "renda",
                      "enum": ["income", "balance", "cashflow"]
                    }
                  },
                  "required": ["ticker"]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Resposta bem sucedida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {"type": "boolean"},
                      "data": {
                        "type": "object",
                        "properties": {
                          "ticker": {"type": "string"},
                          "statement_type": {"type": "string"},
                          "annual_data": {
                            "type": "object",
                            "description": "Dados financeiros anuais por ano",
                            "additionalProperties": {
                              "type": "object",
                              "additionalProperties": {"type": "number"}
                            }
                          },
                          "quarterly_data": {
                            "type": "object",
                            "description": "Dados financeiros trimestrais",
                            "additionalProperties": {
                              "type": "object",
                              "additionalProperties": {"type": "number"}
                            }
                          }
                        }
                      },
                      "error": {"type": "string"}
                    },
                    "required": ["success"]
                  }
                }
              }
            },
            "422": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "detail": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "loc": {"type": "array", "items": {"type": "string"}},
                            "msg": {"type": "string"},
                            "type": {"type": "string"}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/financial/earnings": {
        "post": {
          "summary": "Obter o relatório de ganhos",
          "description": "Obtenha um relatório de lucros para uma empresa, trimestre e ano específicos (ponto de extremidade legado para compatibilidade com versões anteriores).",
          "operationId": "get_earnings_report_financial_earnings_post",
          "parameters": [
            {
              "name": "ticker",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string",
                "title": "Sigla",
                "description": "Código de negociação da ação (ex: AAPL, MSFT, TSLA)"
              }
            },
            {
              "name": "quarter",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string",
                "title": "Quarter",
                "description": "Quartil (por exemplo, Q1, Q2, Q3, Q4)"
              }
            },
            {
              "name": "year",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string",
                "title": "Ano",
                "description": "String de ano (e.g., 2023)"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Resposta bem sucedida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {"type": "boolean"},
                      "data": {
                        "type": "string",
                        "description": "Conteúdo do relatório de lucros"
                      },
                      "error": {"type": "string"}
                    },
                    "required": ["success"]
                  }
                }
              }
            },
            "422": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "detail": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "loc": {"type": "array", "items": {"type": "string"}},
                            "msg": {"type": "string"},
                            "type": {"type": "string"}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/search/wikipedia": {
        "post": {
          "summary": "Pesquisar na Wikipedia",
          "description": "Pesquisa na Wikipédia sobre um tópico específico e retorna uma lista de resultados com informações detalhadas. Útil para definições de termos financeiros e pesquisa de histórico de empresas.",
          "operationId": "search_wikipedia_search_wikipedia_post",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "query": {
                      "type": "string",
                      "title": "Busca",
                      "description": "O termo ou frase de busca a ser procurado na Wikipédia"
                    },
                    "limit": {
                      "type": "integer",
                      "title": "Limit",
                      "default": 5,
                      "description": "Mnúmero máximo de resultados a retornar"
                    }
                  },
                  "required": ["query"]
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Resposta bem sucedida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {"type": "boolean"},
                      "data": {
                        "type": "object",
                        "properties": {
                          "results": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "title": {"type": "string"},
                                "pageid": {"type": "integer"},
                                "snippet": {"type": "string"},
                                "fullurl": {"type": "string"},
                                "extract": {"type": "string"},
                                "wordcount": {"type": "integer"}
                              }
                            }
                          }
                        }
                      },
                      "error": {"type": "string"}
                    },
                    "required": ["success"]
                  }
                }
              }
            },
            "422": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "detail": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "loc": {"type": "array", "items": {"type": "string"}},
                            "msg": {"type": "string"},
                            "type": {"type": "string"}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
